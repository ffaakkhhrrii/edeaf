<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".ui.profile.SetProfileFragment"
    android:background="#EFF9FF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:elevation="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/backFragment"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/arrow_left"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center_horizontal"
            android:paddingVertical="12dp"
            android:layout_marginStart="-40dp"
            android:text="Setting Profile"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgUpdate"
        android:scaleType="fitCenter"
        android:layout_width="137dp"
        android:layout_height="137dp"
        app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:src="@drawable/user_profile_nulll"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginHorizontal="22dp"
        android:padding="5dp"
        android:fontFamily="@font/poppins_semi_bold"
        android:text="About You"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="22dp"
        android:layout_marginVertical="13dp"
        android:padding="5dp"
        android:text="Name"
        android:fontFamily="@font/poppins_medium"
        android:textSize="16sp"
        android:textColor="#000000"/>

    <EditText
        android:id="@+id/edtNameUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:autofillHints=""
        android:background="@drawable/input_set_profile"
        android:hint="Enter Name"
        android:fontFamily="@font/poppins_regular"
        android:inputType="textPersonName"
        android:padding="15dp"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="22dp"
        android:layout_marginVertical="13dp"
        android:padding="5dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Email"
        android:textSize="16sp"
        android:textColor="#000000"/>

    <EditText
        android:id="@+id/edtEmailUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:autofillHints=""
        android:background="@drawable/input_set_profile"
        android:hint="Enter Email"
        android:fontFamily="@font/poppins_regular"
        android:inputType="textEmailAddress"
        android:padding="15dp"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btnSaveProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:background="@drawable/button_login"
        android:fontFamily="@font/poppins_semi_bold"
        android:text="Save"
        android:textColor="@color/white"
        android:textSize="20sp" />

</LinearLayout>