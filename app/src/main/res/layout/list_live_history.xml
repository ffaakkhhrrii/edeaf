<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginVertical="16dp"
    android:background="#E3E7EA">

    <LinearLayout
        android:id="@+id/rvContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="#E3E7EA">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@+id/iconLive"
                android:layout_width="50dp"
                android:layout_height="80dp"
                android:background="#313D54">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/history"
                    android:layout_marginHorizontal="10dp"/>

            </FrameLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@id/iconLive">

                <TextView
                    android:id="@+id/titleLiveHistory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Judul Penerjemah Langsung"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/dateLiveHistory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Tanggal"
                    android:textSize="12sp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="#000000"/>

            </LinearLayout>

            <ImageButton
                android:id="@+id/btnHistoryLive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/button_history"
                android:padding="5dp"
                android:src="@drawable/arrow_right" />

        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>